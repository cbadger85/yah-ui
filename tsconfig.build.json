{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",

    "skipLibCheck": true // `vite-plugin-checker` runs code analysis already, so the compilier doesn't need to do it again
  },
  "exclude": ["src/setupTests.ts", "src/**/*.test.ts", "src/**/*.test.tsx"]
}

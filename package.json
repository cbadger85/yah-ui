{
  "name": "yah-ui",
  "version": "0.1.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "repository": "https://github.com/cbadger85/yah-ui.git",
  "author": "Charles Badger",
  "license": "MIT",
  "scripts": {
    "build": "vite build && yarn build-types",
    "build:watch": "vite build --watch --mode development",
    "build-types": "tsup && prettier --write dist/types/index.d.ts",
    "build-types:watch": "tsc --watch --preserveWatchOutput",
    "dev": "concurrently yarn:build:watch yarn:build-types:watch -c green,yellow",
    "start:ci": "yarn lint && yarn test && yarn build",
    "lint": "eslint src/*",
    "prepare": "husky install",
    "test": "jest --silent --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "yarn test --coverage"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@happy-dom/jest-environment": "^2.28.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "14.18.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.13",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4",
    "vite": "^2.7.13"
  }
}
